#!/usr/bin/env node

var nopt = require('nopt');
var jpath = require('../jpath');

var opts = {
    validate: [String, Array]
};
var args = nopt(opts, {}, process.argv, 2);

if (args.validate) {

    args.validate.forEach(function(path) {
        jpath.split(path);
        var res =
            !/^\.|^\/\./.test(path[0]) ||
            /[^\s]+/.test(jpath.lastSteps.join(''))
                ? 'fail' : 'pass';

        console.log(res, path, jpath.split(path));
    });
}
